print ("Eu sou minerador de dados")

#2 - operações matemáticas
print (4+5)
print (3*2)
print (5/2)
print (10-5)

#3 e 4 - imprimir valores int e float
print (type(int(5.656)))
print (float(5.645454))

#5 - passar o valor float para string
type (str (float(5.654654)))

#6 - arredondar o número 2.898
print (round (2.898))
print (round (2.4545455,4))

